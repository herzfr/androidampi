<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="INPUT REGISTRASI"
            android:textSize="20dp"
            android:textColor="#2E2C2C"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etlReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintTextColor="#2C2C2C"
            android:focusable="true"
            android:layout_margin="10dp"
            android:hint="No Registrasi">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/noReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2C2C2C"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etlName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintTextColor="#2C2C2C"
            android:focusable="true"
            android:layout_margin="10dp"
            android:hint="Nama Anggota">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/namaAnggota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#2C2C2C"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:text="Upload"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:background="#2196F3"
            android:text="Registrasi"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="#2196F3"
            android:text="List"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>